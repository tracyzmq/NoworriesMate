page {
  background-color: #f8f9fa;
}

.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.nav-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.nav-btn {
  flex: 1;
  padding: 20rpx 0;
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  color: #ff6b6b;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
  outline: none;
}

.summary-card {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #888;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: flex-start;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  position: relative;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

.history-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 10rpx 24rpx rgba(0,0,0,0.12);
}

.timeline-dot {
  width: 30rpx;
  height: 30rpx;
  background: #667eea;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 10rpx;
  flex-shrink: 0;
}

.history-content {
  flex: 1;
}

.date-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.merit-count {
  font-size: 26rpx;
  color: #4ecdc4;
  font-weight: bold;
}

.items-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item {
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.item-text {
  font-size: 28rpx;
  color: #444;
  line-height: 1.5;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #aaa;
  font-size: 60rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #888;
}