page {
  background-color: #f8f9fa;
}

.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 30rpx;
  color: white;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.user-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
  transform: rotate(30deg);
}

.user-avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
}

.login-prompt {
  font-size: 32rpx;
  font-weight: 500;
}

.user-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2);
}

.user-details {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-level {
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.stats-section {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-circle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #888;
}

.function-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  cursor: pointer;
}

.function-item:last-child {
  border-bottom: none;
}

.function-text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #ccc;
  font-size: 36rpx;
  font-weight: bold;
}

.health-tip {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
}

.tip-header {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tip-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.tip-content {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.tip-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
}