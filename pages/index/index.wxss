/* 页面整体样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fdfcfb 0%, #f5f7fa 100%);
  padding: 30rpx;
  box-sizing: border-box;
}

/* 标题样式 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}
.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 清单容器 */
.list-container {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 50rpx;
}
.list-title {
  display: block;
  font-size: 32rpx;
  color: #555;
  margin-bottom: 40rpx;
  font-weight: bold;
}
.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.list-item:last-child {
  border-bottom: none;
}
.checkbox {
  width: 44rpx;
  height: 44rpx;
  margin-right: 25rpx;
  flex-shrink: 0;
}
.item-text {
  font-size: 34rpx;
  color: #333;
  line-height: 1.5;
  flex-grow: 1;
}
.text-checked {
  color: #888;
  text-decoration: line-through;
}

/* 按钮区域 */
.button-area {
  text-align: center;
}
.share-button {
  background: linear-gradient(to right, #FFD700, #FFA500);
  color: #333;
  font-weight: bold;
  font-size: 34rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 165, 0, 0.3);
}
.hint {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 图片预览区域 */
.preview-area {
  margin-top: 60rpx;
  text-align: center;
}
.preview-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
.preview-image {
  width: 100%;
  border-radius: 20rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}
.save-button {
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  border-radius: 50rpx;
}